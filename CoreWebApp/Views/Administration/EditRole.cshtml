@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card mb-3">
        <div class="card-header">
            <h3>Users with this role</h3>
        </div>
        <div class="card-body">

            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">There are no users with this role</h5>
            }

            <div class="card-footer">
                <a asp-action="EditUsersInRole" asp-controller="Administration" 
                class="btn btn-success" asp-route-RoleId="@Model.Id" style="width:auto">Add/Remove Users</a>

            </div>
        </div>
    </div>
</form>